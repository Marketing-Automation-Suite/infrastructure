# NFT Software Engine Environment Configuration

# Application
APP_NAME="NFT Software Engine"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8501","http://localhost:8000"]

# Database - SQLite for development, PostgreSQL for production
DATABASE_URL="sqlite:///./nft_engine.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/nft_engine"

# Redis
REDIS_URL="redis://localhost:6379"

# Blockchain Configuration
# Get your API key from Alchemy, Infura, or other providers
WEB3_PROVIDER_URL="https://polygon-mumbai.g.alchemy.com/v2/your-api-key"
PRIVATE_KEY="your-private-key-here"  # Keep this secret!
PUBLIC_KEY="your-public-address-here"
GAS_PRICE="20"  # Gas price in gwei
GAS_LIMIT=300000

# Smart Contracts
CONTRACT_FACTORY_ADDRESS="your-contract-factory-address"
NFT_BASE_URI="https://api.nft-engine.com/metadata/"

# Authentication
JWT_SECRET_KEY="your-super-secret-jwt-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# External Services
AUTH_SERVICE_URL="http://localhost:8001"

# Payment Integration (Optional - for Stripe payments)
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds

# Analytics
ANALYTICS_RETENTION_DAYS=365

# Logging
LOG_LEVEL=INFO
